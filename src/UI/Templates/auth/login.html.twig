{% extends 'base.html.twig' %}

{% block title %}Connexion - {{ parent() }}{% endblock %}

{% block body %}
    <div class="flex justify-center items-center min-h-screen bg-gray-100">
        <div class="w-full max-w-md bg-white p-8 rounded-lg shadow-lg">
            <h2 class="text-2xl font-semibold text-center text-gray-700 mb-4">Connexion</h2>

            {{ form_start(form) }}
            <div class="mb-4">
                {{ form_label(form.username, 'Email', {'label_attr': {'class': 'block text-sm font-medium text-gray-600'}}) }}
                {{ form_widget(form.username, {'attr': {'class': 'w-full mt-2 px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500'}}) }}
                {{ form_errors(form.username) }}
            </div>
            <div class="mb-4">
                {{ form_label(form.password, 'Mot de passe', {'label_attr': {'class': 'block text-sm font-medium text-gray-600'}}) }}
                {{ form_widget(form.password, {'attr': {'class': 'w-full mt-2 px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500'}}) }}
                {{ form_errors(form.password) }}
            </div>
            {% if error %}
                <div class="mb-4 text-sm text-red-500">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <div class="mt-6 flex justify-between items-center">
                {{ form_widget(form.submit) }}
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}