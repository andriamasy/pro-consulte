{% extends '@UI/admin/base.html.twig' %}

{% block title %}Créer un Psychologue{% endblock %}

{% block content %}
    <div class="max-w-4xl mx-auto py-8">
        <div class="bg-white p-8 rounded-lg shadow-lg">
            <h2 class="text-2xl font-bold text-gray-800 mb-6">Créer un nouveau psychologue</h2>

            {# Affichage des erreurs de formulaire si elles existent #}
            {% if app.session.flashbag.has('error') %}
                <div class="bg-red-100 text-red-700 p-4 rounded-md mb-4">
                    <ul>
                        {% for message in app.session.flashbag.get('error') %}
                            <li>{{ message }}</li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}

            <form method="POST" action="{{ path('admin_psychologists_new') }}" enctype="multipart/form-data">
                {# CSRF token pour la sécurité #}
                {{ form_row(form._token) }}

                <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
                    {# Champ "Nom" du psychologue #}
                    <div>
                        <label for="name" class="block text-sm font-medium text-gray-700">Nom</label>
                        {{ form_row(form.firstName, {'attr': {'class': 'mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500'}}) }}
                    </div>

                    {# Champ "Nom" du psychologue #}
                    <div>
                        <label for="name" class="block text-sm font-medium text-gray-700">Prénom</label>
                        {{ form_row(form.lastName, {'attr': {'class': 'mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500'}}) }}
                    </div>

                    {# Champ "code" #}
                    <div>
                        <label for="code" class="block text-sm font-medium text-gray-700">Code</label>
                        {{ form_row(form.code, {'attr': {'class': 'mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500'}}) }}
                    </div>

                    {# Champ "Email" #}
                    <div>
                        <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
                        {{ form_row(form.email, {'attr': {'class': 'mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500'}}) }}
                    </div>

                    {# Champ "ville" #}
                    <div>
                        <label for="city" class="block text-sm font-medium text-gray-700">Ville</label>
                        {{ form_row(form.city, {'attr': {'class': 'mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500'}}) }}
                    </div>

                    {# Champ "Numéro de téléphone" #}
                    <div>
                        <label for="mobile" class="block text-sm font-medium text-gray-700">Numéro de téléphone</label>
                        {{ form_row(form.mobile, {'attr': {'class': 'mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500'}}) }}
                    </div>
                </div>
                <div class="grid grid-cols-1 gap-6 sm:grid-cols-1 mt-3">
                    {# Champ "Déscription" #}
                    <div>
                        <label for="description" class="block text-sm font-medium text-gray-700">Description</label>
                        {{ form_row(form.description, {'attr': {'class': 'mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500'}}) }}
                    </div>
                </div>

                {# Champ "En ligne" (Checkbox) #}
                <div class="mt-6">
                    <label class="flex items-center">
                        {{ form_row(form.online, {'attr': {'class': 'h-4 w-4 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500'}}) }}
                        <span class="ml-2 text-sm font-medium text-gray-700">En ligne</span>
                    </label>
                </div>

                {# Bouton de soumission #}
                <div class="mt-6">
                    <button type="submit" class="w-full py-2 px-4 bg-blue-600 text-white font-semibold rounded-lg shadow-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50">
                        Enregistrer
                    </button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
